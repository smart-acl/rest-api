{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": [
      "es2017"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "typeRoots": [
      "./@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "*": ["node_modules/*", "src/*", "*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
